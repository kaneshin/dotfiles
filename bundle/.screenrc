# help (?) - Screen help
#
# Useful keys
#   screen (c) - generate new window and shell
#   next (n) - next window
#   prev (p) - previous window
#   select (') - switch window
#   windowlist (") - switch window
#   windows (w) - window list
#   title (A) - change window title
#   kill (K) - kill window and shell
#   redisplay (l) - redraw current window

# encoding
defutf8 on
encoding utf8
defencoding utf8
defkanji utf8

# do you wanna see the copyright? I don't wanna do.
startup_message off

# automatically detach if hung-up
autodetach on

# viewable bell
vbell off

# default size of scrollback buffer
defscrollback 10000

# flush buffer on screen after exit app
altscreen on

# terminal
defbce on
term "xterm-256color"

# shell title
shelltitle "$|zsh"

# status line
hardstatus alwayslastline "%{= kW}[ %{= kG}%H%{-} ]%=%{= kw}%?%-Lw%?%n* %f%t%?(%u)%?%?%+Lw%?%?%=%{= kW}[ %{= kM}$LANG%{-} ][ %{= kC}%D %m/%d %02c:%s%{-} ]"

# escape
escape 

# key bind with escape
bind 0 remove
bind 1 only
bind j screen
