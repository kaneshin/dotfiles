##############################
# encoding setting
##############################
defutf8 on
defencoding utf8
encoding utf-8 utf-8

##############################
# switch on/off
##############################
startup_message off
vbell off
autodetach on
hardstatus on

##############################
# scrollback
##############################
scrollback 5000
defscrollback 5000

##############################
# status line
##############################
shelltitle "$|zsh"
hardstatus alwayslastline "%{= wk}[screen@$USER]%` %`%-w%{= ck}%n %t%{-}%+w %=[$LANG][%m/%d %02c:%s]"

##############################
# key mappings
##############################
escape 
bind 0 remove
bind 1 only
bind 2 split
bind 3 split -v
bind 4 focus
