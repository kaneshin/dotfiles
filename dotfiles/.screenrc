# vim:set fdm=marker:
#
# File:        .screenrc
# Maintainer:  Shintaro Kaneko <kaneshin0120@gmail.com>
# Last Change: 27-Aug-2012.

# encoding
encoding utf-8
defencoding utf8
defkanji utf8

# do you wanna see the copyright? I don't wanna do.
startup_message off

# automatically detach if hung-up
autodetach on

# viewable bell
vbell off

# default size of scrollback buffer
defscrollback 5000

# terminal
term xterm-256color

# shell title
shelltitle "$|zsh"

# status line
hardstatus alwayslastline "%{= wk}[screen@$USER]%` %`%-w%{= ck}%n %t%{-}%+w %=[$LANG][%m/%d %02c:%s]"

# escape
escape 

# key bind with escape
bind 0 remove
bind 1 only
bind 2 split
bind 3 split -v
bind  focus

# key bind without escape
# bindkey  focus

