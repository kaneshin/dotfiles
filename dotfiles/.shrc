if [ -f ${HOME}/.sh.alias ]; then
  . ${HOME}/.sh.alias
fi

if [ -f ${HOME}/.sh.function ]; then
  . ${HOME}/.sh.function
fi

_set_gitst()
{
  case $1 in
    on )
      GITST=1
      ;;
    off )
      GITST=0
      ;;
  esac
}

parse_git_status()
{
  if [ $GITST -ne 0 ]; then
    git status -s 2> /dev/null
  fi
}

parse_git_branch()
{
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ \1/'
}

_set_gitst on
alias gitst='_set_gitst'

gi()
{
  curl https://www.gitignore.io/api/$@ ;
}

_read_type ".shrc"

_read_local ".shrc"

